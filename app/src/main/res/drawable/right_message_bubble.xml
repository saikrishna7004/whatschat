<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Diagonal background color -->
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="100%"
            android:pivotY="0">
            <shape android:shape="rectangle">
                <solid android:color="@color/right_msg"/>
            </shape>
        </rotate>
    </item>

    <!-- Main background with curved corner -->
    <item android:right="16dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/right_msg"/>
            <corners android:radius="8dp" />
            <padding
                android:left="12dp"
                android:top="8dp"
                android:right="12dp"
                android:bottom="8dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/right_msg"/>
        </shape>
    </item>
</layer-list>
